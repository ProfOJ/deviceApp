<%- include('../partials/header') %> 

    <div class="column is-one-third">
    <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48">
                <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4">SN: <%= device.serial %> </p>
              <p class="subtitle is-6">Barcode: <%= device.barcode %> </p>
            </div>
          </div>
          <div class="content">
            <table class="table">
                <thead>
                  <tr>
                    <th>Device</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Category</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= device.product %></td>
                    <td><%= device.make %></td>
                    <td><%= device.model %></td>
                    <td><a href="/devices?category=<%= device.category%>"><%= device.category%></a></td>
                  </tr>
                </tbody>
            </table>
          </div>
        </div>
        <footer class="card-footer">
            <a href="/devices" class="card-footer-item">Back</a>
            <a href="/devices/<%=device._id%>/edit" class="card-footer-item">Edit</a>
        </footer> 
      </div>
        <div class="py-4">
            <form action="/devices/<%=device._id%>?_method=DELETE" method="POST">
                <button class="button is-medium is-fullwidth is-danger is-outlined">Delete</button>
            </form>
        </div>
    </div>

    



<%- include('../partials/footer') %> 